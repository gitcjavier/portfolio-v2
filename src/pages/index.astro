import "../styles/global.css";
---

<Layout title="Portfolio de Javier Castro Retamal - Desarrollador Web"
		description="Portfolio de Javier Castro Retamal - Desarrollador Web"
		keywords="Portfolio, Javier Castro Retamal, Desarrollador Web, DiseÃ±o Web, Aplicaciones Web"
