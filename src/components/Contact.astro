import Footer from "./Footer.astro";
---

<style>
  .email-tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(128, 128, 128, 0.8);
    color: white;
    padding: 8px 12px;
    border-radius: 6px;
    font-size: 13px;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1000;
    margin-bottom: 8px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    min-width: fit-content;
  }

  .email-tooltip::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 6px solid transparent;
    border-top-color: rgba(128, 128, 128, 0.8);
  }

  .contact-item:hover .email-tooltip {
    opacity: 1;
    visibility: visible;
  }

  .copy-button {
    background: rgba(10, 31, 216, 0.812);
    border: 1px solid #fff;
    color: #fff;
    padding: 4px;
    border-radius: 4px;
    margin-left: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 24px;
    height: 24px;
  }

  .copy-button:hover {
    background: #1768e9;
    color: white;
  }

  .copy-success {
    background: rgba(34, 197, 94, 0.2);
    border-color: #22c55e;
    color: #22c55e;
  }

  /* Mejoras para móviles */
  @media (max-width: 640px) {
    .email-tooltip {
      font-size: 11px;
      padding: 6px 8px;
      white-space: normal;
      max-width: 200px;
      text-align: center;
    }
    
    #contact {
      padding: 2rem 0;
    }
    
    #contact .container {
      padding: 0 1rem;
    }
    
    #contact h2 {
      font-size: 1.75rem;
      margin-bottom: 1.5rem;
    }
    
    #contact h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }
    
    #contact p {
      font-size: 0.9rem;
    }
    
    .contact-item .w-14 {
      width: 3rem;
      height: 3rem;
    }
    
    .contact-item svg {
      width: 1.5rem;
      height: 1.5rem;
    }
  }
  
  /* Mejoras específicas para móviles muy pequeños */
  @media (max-width: 393px) {
    #contact {
      padding: 1.5rem 0;
    }
    
    #contact .container {
      padding: 0 0.75rem;
    }
    
    #contact h2 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }
    
    #contact h3 {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
    }
    
    #contact p {
      font-size: 0.875rem;
    }
    
    .contact-item .w-14 {
      width: 2.75rem;
      height: 2.75rem;
    }
    
    .contact-item svg {
      width: 1.25rem;
      height: 1.25rem;
    }
  }
  
  /* Mejoras para escritorio */
  @media (min-width: 1024px) {
    #contact {
      padding: 3rem 0;
    }
    
    #contact .container {
      padding: 0 2rem;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const copyButton = document.getElementById("copy-email-btn");
    const emailText = "icastroretamal@gmail.com";

    if (copyButton) {
      copyButton.addEventListener("click", async () => {
        try {
          await navigator.clipboard.writeText(emailText);

          // Cambiar el ícono temporalmente
          const originalText = copyButton.innerHTML;
          copyButton.innerHTML = `
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            `;
          copyButton.classList.add("copy-success");

          // Restaurar después de 2 segundos
          setTimeout(() => {
            copyButton.innerHTML = originalText;
            copyButton.classList.remove("copy-success");
          }, 2000);
        } catch (err) {
          console.error("Error al copiar:", err);
        }
      });
    }
  });
</script>

