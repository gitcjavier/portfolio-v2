---
interface Props {
    date: string;
    title: string;
    description: string;
    link?: string;
}

const { date, title, description, link }: Props = Astro.props;
---

<li class="mb-10 ms-4 hover:bg-white/10 transition-all duration-300 border-white/80 rounded-lg p-4">
    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"></div>
    <time class="mb-1 text-sm font-normal leading-none text-sky-100/80">{date}</time>
    <h3 class="text-lg font-semibold text-amber-100 dark:text-amber-100 mt-2 text-pretty prose prose-sm  ">{title}</h3>
    <p class="mb-4 text-base font-normal text-gray-300 text-pretty prose prose-base">{description}</p>

</li>