---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 font-sans antialiased transition-colors duration-300">
    <slot />
    
    <script>
      import { initAnimations } from '~/scripts/animations.js';
      import { initThemeToggle } from '~/scripts/theme.js';
      
      // Initialize animations when the DOM is ready
      document.addEventListener('DOMContentLoaded', () => {
        initAnimations();
        initThemeToggle();
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    line-height: 1.6;
  }
  
  /* Header scroll effect */
  header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  .dark header.scrolled {
    background: rgba(17, 24, 39, 0.95);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  /* Smooth transitions */
  * {
    transition: color 0.3s ease, background-color 0.3s ease, border-color 0.3s ease, transform 0.3s ease, opacity 0.3s ease;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #f1f5f9;
  }
  
  .dark ::-webkit-scrollbar-track {
    background: #374151;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 4px;
  }
  
  .dark ::-webkit-scrollbar-thumb {
    background: #6b7280;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }
  
  .dark ::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }
  
  /* Focus styles */
  button:focus,
  input:focus,
  textarea:focus,
  a:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  
  .dark button:focus,
  .dark input:focus,
  .dark textarea:focus,
  .dark a:focus {
    outline: 2px solid #60a5fa;
  }
  
  /* Selection styles */
  ::selection {
    background: #3b82f6;
    color: white;
  }
  
  .dark ::selection {
    background: #60a5fa;
    color: #111827;
  }
</style>